<Window x:Class="ProdAndLog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdAndLog"
        mc:Ignorable="d"
        Title="Управление производством и логистикой" Height="600" Width="527">
    <TabControl x:Name="MainTabs">

        <TabItem Header="Справочники">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="172*"/>
                    <ColumnDefinition Width="349*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.ColumnSpan="2">
                    <Button Content="Продукция" Click="BtnDictProducts_Click" Margin="3"/>
                    <Button Content="Материалы" Click="BtnDictMaterials_Click" Margin="3"/>
                    <Button Content="Поставщики" Click="BtnDictSuppliers_Click" Margin="3"/>
                    <Button Content="Сотрудники" Click="BtnDictEmployees_Click" Margin="3"/>
                    <Button Content="Оборудование" Click="BtnDictEquipment_Click" Margin="3"/>
                    <Button Content="Добавить..." Click="BtnDictAdd_Click" Margin="3" x:Name="BtnAddRecord" Visibility="Collapsed"/>
                </StackPanel>

                <DataGrid x:Name="DataGridDict" Grid.Row="1" Margin="5,5,5,5" IsReadOnly="True" AutoGenerateColumns="False" Grid.ColumnSpan="2"/>
            </Grid>
        </TabItem>

        <TabItem Header="Учет закупок и складской деятельности">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="360*"/>
                    <ColumnDefinition Width="23*"/>
                    <ColumnDefinition Width="138*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="5,5,5,5" Grid.ColumnSpan="3">
                    <Button Content="Заказы поставщикам" Click="BtnPurchasesOrders_Click" Margin="3"/>
                    <Button Content="Приёмка" Click="BtnPurchasesReceipts_Click" Margin="3"/>
                    <Button Content="Остатки на складах" Click="BtnStockBalances_Click" Margin="3"/>
                    <Button Content="Создать заказ" Click="BtnCreatePurchaseOrder_Click" Margin="3"/>
                    <Button Content="Новая приёмка" Click="BtnCreateReceipt_Click" Margin="3"/>
                </StackPanel>

                <DataGrid x:Name="DataGridPurchases" Grid.Row="1" Margin="5,5,5,5" IsReadOnly="True" AutoGenerateColumns="False" Grid.ColumnSpan="3"/>
            </Grid>
        </TabItem>

        <TabItem Header="Управление производственными заказами">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <Button Content="Производственные заказы" Click="BtnProdOrders_Click" Margin="3"/>
                    <Button Content="Отслеживание статуса" Click="BtnProdStages_Click" Margin="3"/>
                    <Button Content="Создать заказ" Click="BtnCreateProdOrder_Click" Margin="3"/>
                </StackPanel>

                <DataGrid x:Name="DataGridProduction" Grid.Row="1" Margin="5" IsReadOnly="True" AutoGenerateColumns="False"
                          MouseDoubleClick="DataGridProduction_MouseDoubleClick"/>
            </Grid>
        </TabItem>

    </TabControl>
</Window>
