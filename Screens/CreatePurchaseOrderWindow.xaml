<Window x:Class="ProdAndLog.Screens.CreatePurchaseOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdAndLog.Screens"
        mc:Ignorable="d"
        Title="Создать заказ поставщику" Height="280" Width="450">
    <Grid>
        <StackPanel Margin="15">
            <TextBlock Text="Поставщик:" Margin="0,0,0,2"/>
            <ComboBox x:Name="cmbSupplier"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Id"
                  Margin="0,0,0,10"/>

            <TextBlock Text="Ожидаемая дата поставки:" Margin="0,0,0,2"/>
            <DatePicker x:Name="dpExpectedDate"
                    SelectedDate="{x:Static system:DateTime.Now}"
                    Margin="0,0,0,15"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Создать" Click="Save_Click" Width="90" Margin="0,0,10,0"/>
                <Button Content="Отмена" Click="Cancel_Click" Width="90"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
