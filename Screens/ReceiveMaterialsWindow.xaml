<Window x:Class="ProdAndLog.Screens.ReceiveMaterialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProdAndLog.Screens"
        mc:Ignorable="d"
        Title="Приёмка материалов" Height="420" Width="500">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15">
                <TextBlock Text="Заказ поставщику:" Margin="0,0,0,2"/>
                <ComboBox x:Name="cmbOrder"
                      DisplayMemberPath="OrderInfo"
                      SelectedValuePath="Id"
                      Margin="0,0,0,10"/>

                <TextBlock Text="Материал:" Margin="0,0,0,2"/>
                <ComboBox x:Name="cmbMaterial"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      Margin="0,0,0,10"/>

                <TextBlock Text="Склад:" Margin="0,0,0,2"/>
                <ComboBox x:Name="cmbWarehouse"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      Margin="0,0,0,10"/>

                <TextBlock Text="Получено (ед.):" Margin="0,0,0,2"/>
                <TextBox x:Name="txtReceived" Text="0" Margin="0,0,0,10"/>

                <TextBlock Text="Брак (ед.):" Margin="0,0,0,2"/>
                <TextBox x:Name="txtDefect" Text="0" Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Принять" Click="Save_Click" Width="90" Margin="0,0,10,0"/>
                    <Button Content="Отмена" Click="Cancel_Click" Width="90"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
